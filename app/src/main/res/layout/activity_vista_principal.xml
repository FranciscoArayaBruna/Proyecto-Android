<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#444654"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="ListaFacil"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#bcb1a7"
        android:layout_marginTop="42dp"/>

    <EditText
        android:id="@+id/edtNuevaTarea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Nueva tarea"
        android:textColorHint="#bcb1a7"
        android:minHeight="48dp"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:textStyle="italic" />

    <Button
        android:id="@+id/btnAgregarTarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar Tarea"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:textStyle="italic"
        android:backgroundTint="#88FF3D00"
        android:textColor="#bcb1a7"

        />

    <ListView
        android:id="@+id/lstTareas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:layout_weight="1"
        android:textColor="#bcb1a7"
        android:textSize="16sp"
        android:textStyle="italic" />

</LinearLayout>
